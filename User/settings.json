{
  "workbench.colorTheme": "Best Themes - Slime",
  "workbench.activityBar.location": "hidden",
  "editor.fontSize": 20,
  "terminal.integrated.fontFamily": "Mononoki Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "security.workspace.trust.untrustedFiles": "newWindow",
  "security.workspace.trust.startupPrompt": "never",
  "security.workspace.trust.enabled": false,
  "editor.minimap.side": "left",
  "editor.fontFamily": "'Mononoki Nerd Font Mono', 'monospace', monospace",
  "editor.fontLigatures": true,
  "terminal.external.linuxExec": "kitty",
  "terminal.explorerKind": "both",
  "terminal.sourceControlRepositoriesKind": "both",
  "telemetry.telemetryLevel": "off",

  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always",
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "all",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.renderFinalNewline": "on",
  "editor.renderWhitespace": "all",

  "editor.minimap.enabled": false,
  "zenMode.hideActivityBar": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.showTabs": "multiple",

  // UI
  "editor.stickyScroll.enabled": true,
  "window.commandCenter": false,
  "editor.lineNumbers": "relative",
  "editor.lineHeight": 27,
  "editor.overviewRulerBorder": false,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.startupEditor": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.hideCursorInOverviewRuler": true,
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.tabActionCloseVisibility": false,
  "files.trimTrailingWhitespace": true,
  "editor.foldingImportsByDefault": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.guides.bracketPairsHorizontal": "active",
  "search.followSymlinks": false,
  "explorer.compactFolders": false,
  "breadcrumbs.filePath": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.scrollbar.vertical": "visible",
  "editor.wordWrap": "off",
  "terminal.integrated.tabs.enabled": true,

  // Smooth movement
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.cursorBlinking": "phase",
  "editor.smoothScrolling": true,

  "editor.mouseWheelScrollSensitivity": 0.8,
  "editor.mouseWheelZoom": false,
  "workbench.list.mouseWheelScrollSensitivity": 0.7,

  // Animations
  "animations.Enabled": true,
  "animations.CursorAnimation": true,
  "animations.CursorAnimationOptions": {
    "Color": "#FFA500",
    "CursorStyle": "block",
    "TrailLength": 7
  },
  "animations.Active": "Indent",
  "animations.Scrolling": "Slide",
  "animations.Durations": {
    "Command-Palette": 600,
    "Scrolling": 200,
    "Active": 500,
    "Smooth-Mode": 300,
    "Tabs": 300
  },
  "animations.Smooth-Mode": true,
  "vscode_custom_css.imports": [
    "file:///home/codeskin/.vscode/custom-sidebar-font.css",
    "file:///home/codeskin/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js"
  ],
  "window.customTitleBarVisibility": "auto",
  "animations.Install-Method": "Custom CSS and JS",
  "window.menuBarVisibility": "toggle",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false
}
